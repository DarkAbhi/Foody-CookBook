<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#202543"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/food_thumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/food_thumbnail" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/food_thumbnail"
            tools:text="Masala Dosa" />

        <ImageView
            android:id="@+id/heart_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_unfilled"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/favorite_status_image" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>